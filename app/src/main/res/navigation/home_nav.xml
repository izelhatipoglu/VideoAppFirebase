<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.izelhatipoglu.videoappfirebase.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
    </fragment>
    <fragment
        android:id="@+id/infoHomeFragment"
        android:name="com.izelhatipoglu.videoappfirebase.home.InfoHomeFragment"
        android:label="fragment_info_home"
        tools:layout="@layout/fragment_info_home" />
    <fragment
        android:id="@+id/secondHomeFragment"
        android:name="com.izelhatipoglu.videoappfirebase.home.SecondHomeFragment"
        android:label="fragment_second_home"
        tools:layout="@layout/fragment_second_home" />
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.izelhatipoglu.videoappfirebase.home.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" >
        <action
            android:id="@+id/action_settingFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>