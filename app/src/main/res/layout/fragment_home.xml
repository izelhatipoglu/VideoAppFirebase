<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.HomeFragment">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/home_up_bg"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/bt_user"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/home_person"
            android:background="@android:color/transparent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="16sp"
                android:id="@+id/tv_name"
                tools:text="İzel Hatipoğlu"
                android:layout_marginTop="40dp"
                android:layout_marginStart="10dp"
                />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        app:layout_constraintTop_toBottomOf="@id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/home_illustration"
        android:layout_gravity="center_horizontal"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/recyler_view"
        android:background="@drawable/recyler_bg_pink"
        tools:listitem="@layout/recyler_row"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</androidx.constraintlayout.widget.ConstraintLayout>